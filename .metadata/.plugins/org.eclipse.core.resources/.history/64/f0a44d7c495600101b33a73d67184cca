package com.yourname.ecommerce.controller;

import com.yourname.ecommerce.domain.Product;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/api/products")
public class ProductApiController {

    // 1) 더미 데이터 (실제론 서비스/mapper에서 가져오시면 됩니다)
    private static final List<Product> DUMMY = List.of(
      new Product(1, "알러지프리 사료", 43000),
      new Product(2, "수제 강아지 쿠키", 8000)
    );

    // 2) 전체 목록
    @GetMapping
    public List<Product> list() {
        return DUMMY;
    }

    // 3) 상세 조회
    @GetMapping("/{id}")
    public Product detail(@PathVariable int id) {
        return DUMMY.stream()
                    .filter(p -> p.getId() == id)
                    .findFirst()
                    .orElseThrow(() -> new RuntimeException("상품을 찾을 수 없습니다."));
    }
}